<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/huilvjisuanxml"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".huilvjisuan">

    <TextView
        android:id="@+id/huobititle"
        android:layout_width="203dp"
        android:layout_height="61dp"
        android:layout_marginTop="77dp"
        android:text="币种"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/huobijisuan"
        android:layout_width="392dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Input RMB"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/huobititle"
        app:layout_constraintStart_toStartOf="@+id/huobititle"
        app:layout_constraintTop_toBottomOf="@+id/huobititle" />

    <Button
        android:id="@+id/btn_hb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="转换"
        android:onClick="btn_hb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/huobijisuan" />
</androidx.constraintlayout.widget.ConstraintLayout>